{
  "env": {
    "browser": true
  },
  "ignorePatterns": [
    "*.min.js"
  ],
  "ignoreFiles": "test/**",
  "plugins": [
    "stylelint-no-unsupported-browser-features",
    "stylelint-order",
    "stylelint-use-logical-spec"
  ],
  "overrides": [
    {
      "files": [
        "*.js",
        "**/*.js"
      ],
      "customSyntax": "postcss-styled",
      "rules": {
        "indentation": null,
        "no-eol-whitespace": null
      }
    }
  ],
  "rules": {
    "plugin/no-unsupported-browser-features": [
      true,
      {
        "browsers": [
          "> 1%",
          "not op_mini all"
        ],
        "ignore": [
          "css-appearance",
          "overscroll-behavior",
          "css3-cursors",
          "css-clip-path",
          "css-masks",
          "user-select-none"
        ]
      }
    ],
    "liberty/use-logical-spec": [
      "always"
    ],
    "max-nesting-depth": [
      0
    ],
    "selector-no-vendor-prefix": null,
    "property-no-vendor-prefix": null,
    "value-no-vendor-prefix": null,
    "selector-no-qualifying-type": null,
    "number-no-trailing-zeros": null,
    "string-quotes": null,
    "font-family-no-missing-generic-family-keyword": null,
    "color-hex-length": null,
    "color-hex-case": null,
    "selector-nested-pattern": "^(\\s+|((:root|&|[a-z0-9A-Z._-])(:not\\([^\\)]*\\))*(\\[[^\\]]*\\])*([^\\s>~+])*)|&::?|[&+~>])*$",
    "no-empty-source": null,
    "block-no-empty": true,
    "no-extra-semicolons": true,
    "rule-empty-line-before": [
      "always-multi-line",
      {
        "except": [
          "first-nested"
        ],
        "ignore": [
          "after-comment"
        ]
      }
    ],
    "declaration-block-no-duplicate-properties": [
      true,
      {
        "ignore": [
          "consecutive-duplicates-with-different-values"
        ]
      }
    ],
    "no-eol-whitespace": true,
    "shorthand-property-no-redundant-values": null,
    "selector-max-universal": 0,
    "selector-attribute-brackets-space-inside": "never",
    "selector-attribute-operator-space-after": "never",
    "selector-attribute-operator-space-before": "never",
    "selector-attribute-quotes": "always",
    "selector-combinator-space-after": "always",
    "selector-combinator-space-before": "always",
    "selector-descendant-combinator-no-non-space": true,
    "selector-pseudo-element-case": "lower",
    "selector-pseudo-class-parentheses-space-inside": "never",
    "selector-type-case": "lower",
    "selector-list-comma-space-before": "never",
    "custom-property-no-missing-var-function": true,
    "declaration-property-value-disallowed-list": [
      {
        "/^margin/": "/[^0]/"
      },
      {
        "message": "Elements should not set margins. Use padding, or use parent element if styling layout."
      }
    ],
    "rule-selector-property-disallowed-list": {
      "/^(?!:host)[^[]+\\[/": "/^--/"
    },
    "indentation": [
      2,
      {
        "baseIndentLevel": 1,
        "indentInsideParens": "once-at-root-twice-in-block",
        "indentClosingBrace": false
      }
    ],
    "no-duplicate-selectors": true,
    "max-empty-lines": 1,
    "selector-max-compound-selectors": [
      1,
      {
        "severity": "error",
        "message": "Avoid all invalidations sets. https://chromium.googlesource.com/chromium/src/+/master/third_party/blink/renderer/core/css/style-invalidation.md"
      }
    ],
    "no-descending-specificity": [
      true,
      {
        "severity": "warning"
      }
    ],
    "order/order": [
      "dollar-variables",
      "custom-properties",
      "declarations",
      "rules"
    ],
    "order/properties-alphabetical-order": null,
    "order/properties-order": [
      {
        "groupName": "content",
        "emptyLineBefore": "always",
        "properties": [
          "content"
        ]
      },
