{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strict": false,
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "outDir": "/dev/null",
    "types": [
      "mocha"
    ]
  },
  "exclude": [
    "**/node_modules/*",
    ".history/*",
    "**/*.min.js"
  ]
}