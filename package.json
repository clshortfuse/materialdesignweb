{
  "name": "@shortfuse/materialdesignweb",
  "version": "0.5.0",
  "description": "Material Design for Web",
  "type": "module",
  "scripts": {
    "analyze:docs": "webpack-bundle-analyzer stats.json",
    "build:docs": "webpack --config webpack.config.js --env target=docs",
    "deploy:docs": "scripts/deploy-docs.sh",
    "dist": "webpack",
    "start:docs": "webpack serve --config webpack.config.js --env target=docs --host 0.0.0.0",
    "stats:docs": "webpack --config webpack.config.js --env target=docs --profile --json > stats.json",
    "prebuild": "node bin/generate-css.js --custom=yellow,orange:orange,green:0f0,alias:aqua | npx esbuild --minify --loader=css > docs/theme.css",
    "build": "node esbuild.js --minify --metafile",
    "watch": "node esbuild.js --watch --metafile",
    "pretest": "eslint --ignore-path .gitignore",
    "test": "c8 tap --no-coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clshortfuse/materialdesignweb.git"
  },
  "keywords": [
    "material",
    "design",
    "web"
  ],
  "exports": {
    "./": "./"
  },
  "author": "Carlos Lopez Jr. <clshortfuse@gmail.com> (https://shortfuse.org/)",
  "license": "ISC",
  "sideEffects": ["./polyfills.js", "./components/*.js", "./utils/metadata.js", "./docs/demo/*.js"],
  "bugs": {
    "url": "https://github.com/clshortfuse/materialdesignweb/issues"
  },
  "homepage": "https://github.com/clshortfuse/materialdesignweb#readme",
  "devDependencies": {
    "@types/tap": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "browserslist-to-esbuild": "^1.1.1",
    "c8": "^7.12.0",
    "element-internals-polyfill": "^1.1.11",
    "esbuild": "^0.15.5",
    "eslint": "^8.24.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-github": "^4.3.5",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^39.2.9",
    "eslint-plugin-sort-class-members": "^1.15.2",
    "eslint-plugin-unicorn": "^43.0.2",
    "http-server": "^14.1.1",
    "stylelint": "^14.8.2",
    "stylelint-no-unsupported-browser-features": "github:clshortfuse/stylelint-no-unsupported-browser-features",
    "stylelint-order": "^5.0.0",
    "stylelint-use-logical-spec": "^4.1.0",
    "tap": "^16.3.0",
    "typescript": "^4.8.2",
    "webdriverio": "^7.23.0"
  }
}
