include ../mixins.pug

.comparison
  .render(style="min-width:640px")
    .mdw-navdrawer#navdrawer(mdw-theme-fill="background-50")
        a.mdw-navdrawer__scrim(href="#")
        .mdw-navdrawer__toolbar
          +androidstatusbar('accent-700')
          .mdw-toolbar(mdw-theme-fill="accent-500")
            .mdw-toolbar__action
              .mdw-toolbar__start
                .mdw-tooltip__wrapper
                  a.mdw-button(mdw-icon mdw-active href="#navdrawer").material-icons menu
                  .mdw-tooltip(mdw-text="Menu")
              .mdw-toolbar__title Nav Test
              .mdw-toolbar__end
                .mdw-tooltip__wrapper
                  button.mdw-button(mdw-icon mdw-active mdw-more-button).material-icons more_vert
                  .mdw-tooltip(mdw-text="Options")
        .mdw-navdrawer__drawer
          .mdw-navdrawer__account
            .mdw-navdrawer__image
              img(src="http://yesassets.okdk.co.uk/minititle/cache/minititle-5344-q90-h900-ml99-rz3-b75.jpg")
            .mdw-navdrawer__avatars
              .mdw-navdrawer__avatars-current
                button.mdw-button(mdw-image)
                  img(src="https://i.imgur.com/4YkReKZ.png")
              .mdw-navdrawer__avatars-others
                button.mdw-button(mdw-image)
                  img(src="https://i.imgur.com/4YkReKZ.png")
                button.mdw-button(mdw-image)
                  img(src="https://i.imgur.com/4YkReKZ.png")
            .mdw-button.mdw-navdrawer__subtitle
              .mdw-navdrawer__name Johnathan Lee
              .mdw-navdrawer__email heyfromjonathan@gmail.com
          .mdw-list
            .mdw-list__row
              .mdw-list__icon
                .material-icons move_to_inbox
              .mdw-list__text Inbox
            .mdw-list__row
              .mdw-list__icon
                .material-icons star
              .mdw-list__text Starred
            .mdw-list__row
              .mdw-list__icon
                .material-icons send
              .mdw-list__text Sent
            .mdw-list__row
              .mdw-list__icon
                .material-icons drafts
              .mdw-list__text Drafts
          .mdw-list__divider
          .mdw-list
            .mdw-list__subheader Subheader
            .mdw-list__row
              .mdw-list__icon
                .material-icons mail
              .mdw-list__text All mail
            .mdw-list__row
              .mdw-list__icon
                .material-icons delete
              .mdw-list__text Trash
            .mdw-list__row
              .mdw-list__icon
                .material-icons report
              .mdw-list__text Spam
        .mdw-navdrawer__content(style="padding:16px 8px;")
          div
            span Desktop options
            div.display-flex(style="padding:16px")
              label.mdw-selection(mdw-theme-color="accent-A700")
                input(type="radio" checked name="mdw-navdrawer__style" value="fullheight")
                .mdw-selection__icon
                .mdw-selection__label Full Height (default)
            div.display-flex(style="padding:16px")
              label.mdw-selection(mdw-theme-color="accent-A700")
                input(type="radio" name="mdw-navdrawer__style" value="temporary")
                .mdw-selection__icon
                .mdw-selection__label Temporary
            div.display-flex(style="padding:16px")
              label.mdw-selection(mdw-theme-color="accent-A700")
                input(type="radio" name="mdw-navdrawer__style" value="clipped")
                .mdw-selection__icon
                .mdw-selection__label Clipped
            div.display-flex(style="padding:16px")
              label.mdw-selection(mdw-theme-color="accent-A700")
                input(type="radio" name="mdw-navdrawer__style" value="floating")
                .mdw-selection__icon
                .mdw-selection__label Floating
            div.display-flex(style="padding:16px")
              label.mdw-selection(mdw-theme-color="accent-A700")
                input(type="radio" name="mdw-navdrawer__style" value="floatingcard")
                .mdw-selection__icon
                .mdw-selection__label Floating Card
    +androidnavbar
  +target('https://storage.googleapis.com/material-design/publish/material_v_12/assets/0Bzhp5Z4wHba3eXV2RE1fQ0QtQzQ/patterns-navdrawer-metrics3.png')
