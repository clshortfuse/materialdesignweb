{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "module": "esnext",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "outDir": "/dev/null",
    "resolveJsonModule": true,
    "strict": false,
    "target": "esnext"
  },
  "include": [
    "./bin/**/*.js",
    "./constants/**/*.js",
    "./components/**/*.js",
    "./core/**/*.js",
    "./loaders/**/*.js",
    "./mixins/**/*.js",
    "./services/**/*.js",
    "./utils/**/*.js"
  ],
  "exclude": [
    "./**/*.min.js",
    "./node_modules/*",
    ".history/*",
    "types/*"
  ]
}