{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "module": "esnext",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "outDir": "/dev/null",
    "resolveJsonModule": true,
    "strict": false,
    "target": "esnext"
  },
  "include": [
    "./bin/*",
    "./constants/*",
    "./components/*",
    "./core/*",
    "./loaders/*",
    "./mixins/*",
    "./services/*",
    "./utils/*"
  ],
  "exclude": [
    "**/node_modules/*",
    ".history/*",
    "**/*.min.js",
    "types/*"
  ]
}