include ../mixins.pug

+header()
  +navdrawer("fab")
    #horizontalLine
    #verticalLineLeft
    #verticalLineRight
    .comparison.js
      .render
        div.display-flex.flex-1(mdw-theme-fill="background-50 light" flex-column style="position:relative")
          +androidstatusbar('primary-700 dark')
          +toolbar('primary-500 dark', ['menu'], ['search']) JS
          .mdw-fab__wrapper.content(style="padding:16px 8px;")
            .mdw-fab
              .mdw-fab__button.mdw-button(mdw-icon mdw-theme-fill="accent dark")
                .mdw-fab__hidden-text.material-icons add
                .mdw-fab__shown-text.material-icons clear
              .mdw-fab__speed-dial
                .mdw-button(mdw-icon).material-icons filter_1
                .mdw-button(mdw-icon).material-icons filter_2
                .mdw-button(mdw-icon).material-icons filter_3
                .mdw-button(mdw-icon).material-icons filter_4
                .mdw-button(mdw-icon).material-icons filter_5
        +androidnavbar
    .comparison
      .render
        div.display-flex.flex-1(mdw-theme-fill="background-50 light" flex-column style="position:relative")
          +androidstatusbar('primary-700 dark')
          +toolbar('primary-500 dark', ['menu'], ['search']) CSS Only
          .mdw-fab__wrapper.content(style="padding:16px 8px;") 
            .mdw-fab#my-fab
              a.mdw-fab__close(href="#")
              a.mdw-fab__button.mdw-button(mdw-icon mdw-theme-fill="accent dark" href="#my-fab")
                .mdw-fab__hidden-text.material-icons add
                .mdw-fab__shown-text.material-icons clear
              .mdw-fab__speed-dial
                .mdw-button(mdw-icon).material-icons filter_1
                .mdw-button(mdw-icon).material-icons filter_2
                .mdw-button(mdw-icon).material-icons filter_3
                .mdw-button(mdw-icon).material-icons filter_4
                .mdw-button(mdw-icon).material-icons filter_5
        +androidnavbar
  script(src='fab.min.js')