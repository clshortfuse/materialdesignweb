mixin navdrawer(selected)
  .mdw-navdrawer#docs-navdrawer(mdw-floating="card")
    a.mdw-navdrawer__scrim(href="#")
    .mdw-navdrawer__toolbar
      .mdw-toolbar(mdw-theme-fill="accent-500 dark")
        .mdw-toolbar__action
          .mdw-toolbar__start
            .mdw-tooltip__wrapper
              a.mdw-tooltip__target.mdw-button(mdw-icon href="#docs-navdrawer").material-icons menu
              .mdw-tooltip Menu
          .mdw-toolbar__title=selected
          #docs-menu-buttons.mdw-toolbar__end
            .mdw-tooltip__wrapper
              .mdw-tooltip__target.mdw-button.material-icons(mdw-icon mdw-inactive) brightness_3
              .mdw-tooltip Dark Mode
    .mdw-navdrawer__drawer
      .mdw-list
        a.mdw-list__item(mdw-selected=selected=='Home' href='index.html' mdw-theme-color="primary")
          .mdw-list__text Home
        .mdw-list__subheader Core
        each item in corecomponents
          a.mdw-list__item(mdw-selected=selected==item href=`${item}.html` mdw-theme-color="primary")
            .mdw-list__text=item
        .mdw-list__subheader Complex
        each item in complexcomponents
          a.mdw-list__item(mdw-selected=(selected==item) href=`${item}.html` mdw-theme-color="accent")
            .mdw-list__text=item
    .mdw-navdrawer__content
      block

