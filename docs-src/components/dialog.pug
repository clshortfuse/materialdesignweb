include ../_mixins.pug

+header("dialog")
  .mdw-grid(mdw-margin-top mdw-margin-bottom mdw-stretch)
    .mdw-grid__item(mdw-colspan="100%")
      h5.mdw-type(mdw-baseline-next="36") Dialogs inform users about a specific task and may contain critical information, require decisions, or involve multiple tasks.
      p.mdw-type Dialogs contain text and UI controls. They retain focus until dismissed or a required action has been taken. Use dialogs sparingly because they are interruptive.
    .mdw-grid__item(mdw-colspan="4")
      .mdw-grid__content
        .component-sample
          .component-sample__container
            a.mdw-button.mdw-overlay.mdw-ripple(href="#sample-dialog") Open
            .mdw-dialog#sample-dialog
              a.mdw-dialog__close(href="#")
              .mdw-dialog__popup.mdw-theme(mdw-surface="card")
                .mdw-dialog__title Sample title
                .mdw-dialog__body.mdw-theme(mdw-ink="medium") Sample body text
                .mdw-dialog__button-area
                  a.mdw-button.mdw-overlay.mdw-ripple.mdw-theme(mdw-ink="accent" href="#") Agree
                  a.mdw-button.mdw-overlay.mdw-ripple.mdw-theme(mdw-ink="accent" href="#") Disagree
    .mdw-grid__item(mdw-colspan="8")
      .mdw-type(mdw-style="subtitle") Javascript
      div
        label.mdw-selection.mdw-theme(mdw-ink="accent" style="margin:16px 8px")
          input.mdw-selection__input.mdw-overlay(type="radio" name="javascript" value="required")
          .mdw-selection__icon
          .mdw-selection__label Required
        label.mdw-selection.mdw-theme(mdw-ink="accent" style="margin:16px 8px")
          input.mdw-selection__input.mdw-overlay(type="radio" name="javascript" value="optional" checked)
          .mdw-selection__icon
          .mdw-selection__label Optional
        label.mdw-selection.mdw-theme(mdw-ink="accent" style="margin:16px 8px")
          input.mdw-selection__input.mdw-overlay(type="radio" name="javascript" value="none")
          .mdw-selection__icon
          .mdw-selection__label None
      .mdw-type(mdw-style="subtitle") Options
      div
        label.mdw-selection.mdw-theme(mdw-ink="accent" style="margin:16px 8px")
          input.mdw-selection__input.mdw-overlay(type="checkbox" name="stacked-buttons")
          .mdw-selection__icon
          .mdw-selection__label Stacked Buttons
      .mdw-type(mdw-style="subtitle") Width Units
      div
        label.mdw-selection.mdw-theme(mdw-ink="accent" style="margin:16px 8px")
          input.mdw-selection__input.mdw-overlay(type="radio" name="width" value="auto" checked)
          .mdw-selection__icon
          .mdw-selection__label Auto
        label.mdw-selection.mdw-theme(mdw-ink="accent" style="margin:16px 8px")
          input.mdw-selection__input.mdw-overlay(type="radio" name="width" value="3")
          .mdw-selection__icon
          .mdw-selection__label 3
        label.mdw-selection.mdw-theme(mdw-ink="accent" style="margin:16px 8px")
          input.mdw-selection__input.mdw-overlay(type="radio" name="width" value="4")
          .mdw-selection__icon
          .mdw-selection__label 4
        label.mdw-selection.mdw-theme(mdw-ink="accent" style="margin:16px 8px")
          input.mdw-selection__input.mdw-overlay(type="radio" name="width" value="5")
          .mdw-selection__icon
          .mdw-selection__label 5
        label.mdw-selection.mdw-theme(mdw-ink="accent" style="margin:16px 8px")
          input.mdw-selection__input.mdw-overlay(type="radio" name="width" value="6")
          .mdw-selection__icon
          .mdw-selection__label 6
        label.mdw-selection.mdw-theme(mdw-ink="accent" style="margin:16px 8px")
          input.mdw-selection__input.mdw-overlay(type="radio" name="width" value="7")
          .mdw-selection__icon
          .mdw-selection__label 7
    .mdw-grid__item(mdw-colspan="100%" style="max-height:0")
    .mdw-grid__item(mdw-colspan="100%")
      h6.mdw-type HTML Code
      .mdw-card.mdw-theme.component-code.component-html(mdw-surface="card")
    .mdw-grid__item(mdw-colspan="100%")
      h6.mdw-type Javascript Code
      .mdw-card.mdw-theme.component-code.component-js(mdw-surface="card")
    .mdw-grid__item(mdw-colspan="100%")
      h6.mdw-type Samples
    .mdw-grid__item.display-flex(mdw-colspan="4" flex-justify-content="center")
      .render
        div.display-flex.flex-1(flex-column style="position:relative")
          +androidstatusbar('primary 700', 'dark')
          .mdw-appbar.mdw-theme(mdw-surface="primary 500" mdw-dark)
            .mdw-appbar__action
              .mdw-appbar__start
                .mdw-tooltip__wrapper
                  .mdw-tooltip__target.mdw-button.mdw-overlay.mdw-ripple(mdw-icon).material-icons menu
                  .mdw-tooltip.mdw-theme(mdw-surface="background 700" mdw-dark) Menu
              .mdw-appbar__end
                .mdw-tooltip__wrapper
                  .mdw-tooltip__target.mdw-button.mdw-overlay.mdw-ripple(mdw-icon mdw-more-button).material-icons more_vert
                  .mdw-tooltip.mdw-theme(mdw-surface="background 700" mdw-dark) Options
          .content(style="padding:16px 8px;")
            a.mdw-button.mdw-overlay.mdw-ripple.mdw-theme(mdw-surface="primary" mdw-dark mdw-raised href="#confirmdialog-titled") Titled
            a.mdw-button.mdw-overlay.mdw-ripple.mdw-theme(mdw-surface="primary" mdw-dark mdw-raised href="#confirmdialog-text") Text
            a.mdw-button.mdw-overlay.mdw-ripple.mdw-theme(mdw-surface="primary" mdw-dark mdw-raised href="#dialog-scrolling") Scrolling
            .display-flex(style="padding:16px 0").js
              button.mdw-button.mdw-overlay.mdw-ripple.mdw-theme(mdw-surface="primary" mdw-dark mdw-raised) JS
          .mdw-dialog#confirmdialog-titled
            a.mdw-dialog__close(href="#")
            .mdw-dialog__popup.mdw-theme(mdw-surface="card")
              .mdw-dialog__title Use Google's location service?
              .mdw-dialog__body.mdw-theme(mdw-ink="medium") Let Google help apps determine location. This means sending anonymous location data to Google, even when no apps are running.
              .mdw-dialog__button-area
                a.mdw-button.mdw-overlay.mdw-ripple.mdw-theme(mdw-ink="accent" href="#") Agree
                a.mdw-button.mdw-overlay.mdw-ripple.mdw-theme(mdw-ink="accent" href="#") Disagree
          .mdw-dialog#dialog-scrolling
            a.mdw-dialog__close(href="#")
            .mdw-dialog__popup.mdw-theme(mdw-surface="card")
              .mdw-dialog__header
                .mdw-dialog__title Dialog header
              .mdw-divider.mdw-theme(mdw-ink="divider")
              .mdw-dialog__scrolling
                ul.mdw-list
                  li.mdw-list__item
                    .mdw-list__content Item 1
                  li.mdw-list__item
                    .mdw-list__content Item 2
                  li.mdw-list__item
                    .mdw-list__content Item 3
                  li.mdw-list__item
                    .mdw-list__content Item 4
                  li.mdw-list__item
                    .mdw-list__content Item 5
                  li.mdw-list__item
                    .mdw-list__content Item 6
                  li.mdw-list__item
                    .mdw-list__content Item 7
                  li.mdw-list__item
                    .mdw-list__content Item 8
                  li.mdw-list__item
                    .mdw-list__content Item 9
              .mdw-divider.mdw-theme(mdw-ink="divider")
              .mdw-dialog__button-area
                a.mdw-button.mdw-overlay.mdw-ripple.mdw-theme(mdw-ink="accent" href="#") Agree
                a.mdw-button.mdw-overlay.mdw-ripple.mdw-theme(mdw-ink="accent" href="#") Disagree
          .mdw-dialog#confirmdialog-text
            a.mdw-dialog__close(href="#")
            .mdw-dialog__popup.mdw-theme(mdw-surface="card")
              .mdw-dialog__body.mdw-theme(mdw-ink="medium") Discard draft?
              .mdw-dialog__button-area
                a.mdw-button.mdw-overlay.mdw-ripple.mdw-theme(mdw-ink="accent" href="#") Discard
                a.mdw-button.mdw-overlay.mdw-ripple.mdw-theme(mdw-ink="accent" href="#") Cancel
        +androidnavbar
  script(src='dialog.min.js')